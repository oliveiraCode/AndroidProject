<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="35dp"
            app:layout_constraintBottom_toBottomOf="@id/textViewIdQ"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/attention_icon" />

        <TextView
            android:id="@+id/textViewIdQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="idQ"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="@id/textViewQuestion"
            app:layout_constraintLeft_toRightOf="@id/textViewQuestion" />

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Question"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textViewCorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answer"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textViewWrongAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrong Answer"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/textViewCorrectAnswer"
            app:layout_constraintTop_toBottomOf="@id/textViewCorrectAnswer"
            />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

    </LinearLayout>

</LinearLayout>
