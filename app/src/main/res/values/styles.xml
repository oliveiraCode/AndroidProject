<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="myThemeForActivityBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="styleStart">
        <item name="android:background">@drawable/start_button_background</item>
        <item name="android:textColor">#d41515</item>
    </style>


    <style name="styleLayoutDefault">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="styleCheckBoxes">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">CheckBox</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">17dp</item>
    </style>

</resources>
